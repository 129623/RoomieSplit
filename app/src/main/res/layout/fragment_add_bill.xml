<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.AddBillFragment">

    <!-- Header -->
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_add_24dp"
        android:rotation="45"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加新账单"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_close"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"/>
        
    <TextView
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_close"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"/>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_close"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Smart Entry AI -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_launcher_background" 
                        app:tint="@color/primary"
                        android:layout_marginEnd="8dp"/> 
                        <!-- Todo: Use a sparkle icon if available, using launcher bg for now or existing icon -->

                    <EditText
                        android:id="@+id/input_smart_entry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="智能识别：如“打车 50”"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:singleLine="true"/>

                    <TextView
                        android:id="@+id/btn_smart_parse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="识别"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:padding="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Amount Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出金额"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"/>

                <EditText
                    android:id="@+id/input_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0.00"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:paddingStart="8dp"/>
            </LinearLayout>

            <!-- Categories -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/btn_cat_food"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="餐饮"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/bg_category_pill"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/background_dark"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/btn_cat_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="交通"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/bg_category_pill"
                        android:backgroundTint="#F1F5F9"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/btn_cat_shopping"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="购物"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/bg_category_pill"
                        android:backgroundTint="#F1F5F9"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/btn_cat_fun"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="娱乐"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/bg_category_pill"
                        android:backgroundTint="#F1F5F9"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/btn_cat_other"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="其他"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/bg_category_pill"
                        android:backgroundTint="#F1F5F9"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Details Section -->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp">

                <!-- Date -->
                <LinearLayout
                    android:id="@+id/container_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#F8FAFC" 
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar_today_24dp"
                        app:tint="@color/primary"/>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="日期"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天, 10月24日"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Payer -->
                <LinearLayout
                    android:id="@+id/container_payer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#F8FAFC"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person_24dp"
                        app:tint="@color/primary"/>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="垫付人"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_payer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我 (John)"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/input_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="备注 (可选)"
                    android:inputType="text"
                    android:background="@null"
                    android:padding="16dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="24dp"/>

                <!-- Split Method -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分摊方式"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#F1F5F9"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/btn_split_equal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="均分"
                        android:gravity="center"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/btn_split_weight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="按权重"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/btn_split_exact"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="指定金额"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Participant Item Mock -->
                <!-- Participants Container -->
                <LinearLayout
                    android:id="@+id/container_participants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"/>

             </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_add"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="确认添加"
        android:backgroundTint="@color/primary"
        android:textColor="@color/background_dark"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
