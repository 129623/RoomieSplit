<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_flipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.DecisionFragment">

    <!-- View 0: Poll List -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_back_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_dashboard_24dp"
            android:rotation="180"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:tint="@color/app_text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寝室决策列表"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/app_text_primary"
            app:layout_constraintStart_toEndOf="@id/btn_back_list"
            app:layout_constraintTop_toTopOf="@id/btn_back_list"
            app:layout_constraintBottom_toBottomOf="@id/btn_back_list"
            android:layout_marginStart="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_polls"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/btn_back_list"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_create_poll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_24dp"
            app:backgroundTint="@color/primary"
            app:tint="@color/white"
            android:layout_margin="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- View 1: Create Poll -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_cancel_create"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close_24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:tint="@color/app_text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起新投票"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/app_text_primary"
            app:layout_constraintStart_toEndOf="@id/btn_cancel_create"
            app:layout_constraintTop_toTopOf="@id/btn_cancel_create"
            app:layout_constraintBottom_toBottomOf="@id/btn_cancel_create"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/edit_poll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="决策主题 (如：今天吃什么)"
            android:background="@null"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/btn_cancel_create"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项列表"
            android:textColor="@color/primary"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/edit_poll_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintTop_toBottomOf="@id/edit_poll_title"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/container_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                <!-- Dynamic Options -->
                <EditText
                    android:id="@+id/edit_option_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="选项 1"
                    android:background="#F8FAFC"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edit_option_2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="选项 2"
                    android:background="#F8FAFC"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </ScrollView>
        
        <Button
            android:id="@+id/btn_add_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 添加选项"
            android:background="@android:color/transparent"
            android:textColor="@color/primary"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toBottomOf="@id/edit_poll_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_random_pick"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="直接随机"
                android:backgroundTint="#FFCC80"
                android:textColor="#E65100"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_initiate_vote"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="发起投票"
                android:backgroundTint="@color/primary"
                android:textColor="@color/background_dark"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ViewFlipper>
