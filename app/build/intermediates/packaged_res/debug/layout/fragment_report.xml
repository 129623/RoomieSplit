<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.ReportFragment">

    <!-- Header -->
    <ImageView
        android:id="@+id/btn_back_report"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_dashboard_24dp"
        android:rotation="180"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:tint="@color/app_text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费报表"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/app_text_primary"
        app:layout_constraintStart_toEndOf="@id/btn_back_report"
        app:layout_constraintTop_toTopOf="@id/btn_back_report"
        app:layout_constraintBottom_toBottomOf="@id/btn_back_report"
        android:layout_marginStart="16dp"/>

    <!-- Date Selection -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_date_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/app_surface"
        app:layout_constraintTop_toBottomOf="@id/btn_back_report">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择时间段"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/app_text_primary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/text_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2023-10-01"
                    android:textSize="14sp"
                    android:textColor="@color/app_text_primary"
                    android:background="#F8FAFC"
                    android:padding="12dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="至"
                    android:layout_marginHorizontal="8dp"/>

                <TextView
                    android:id="@+id/text_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2023-10-31"
                    android:textSize="14sp"
                    android:textColor="@color/app_text_primary"
                    android:background="#F8FAFC"
                    android:padding="12dp"
                    android:gravity="center"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_select_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更改日期"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Preview / Stats -->
    <TextView
        android:id="@+id/text_preview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报表预览"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_date_selection"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/app_surface"
        app:layout_constraintTop_toBottomOf="@id/card_date_selection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_report_total_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总支出: ¥ 0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/app_text_primary"/>

             <TextView
                android:id="@+id/text_report_transaction_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共 0 笔交易"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Transaction List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_report_transactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_stats"
        app:layout_constraintBottom_toTopOf="@id/btn_export_excel"
        tools:listitem="@layout/item_transaction"/>

    <!-- Export Button -->
    <Button
        android:id="@+id/btn_export_excel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="导出为 Excel"
        android:backgroundTint="#2E7D32" 
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="24dp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
